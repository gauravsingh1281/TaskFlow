{
    "info": {
        "name": "Task Flow Full API",
        "description": "Complete Postman collection for Auth, Users, and Task APIs (JWT via Cookies or Headers)",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000"
        },
        {
            "key": "token",
            "value": ""
        },
        {
            "key": "taskId",
            "value": ""
        }
    ],
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"fullName\": \"Gaurav Singh\",\n  \"email\": \"gaurav@test.com\",\n  \"mobileNo\": \"9999999999\",\n  \"password\": \"Password@123\",\n  \"role\": \"user\"\n}"
                        },
                        "url": "{{baseUrl}}/api/auth/register"
                    }
                },
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"gaurav@test.com\",\n  \"password\": \"Password@123\"\n}"
                        },
                        "url": "{{baseUrl}}/api/auth/login"
                    }
                },
                {
                    "name": "Logout",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/api/auth/logout"
                    }
                }
            ]
        },
        {
            "name": "Users (Admin)",
            "item": [
                {
                    "name": "Get All Users",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/api/users"
                    }
                }
            ]
        },
        {
            "name": "Tasks",
            "item": [
                {
                    "name": "Create Task",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Learn MVC\",\n  \"description\": \"Understand MVC pattern\",\n  \"priority\": \"high\",\n  \"dueDate\": \"2025-01-31\"\n}"
                        },
                        "url": "{{baseUrl}}/api/tasks"
                    }
                },
                {
                    "name": "Get My Tasks",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/api/tasks"
                    }
                },
                {
                    "name": "Get Task By ID",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/api/tasks/{{taskId}}"
                    }
                },
                {
                    "name": "Update Task",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Updated Task Title\",\n  \"description\": \"Updated description\",\n  \"priority\": \"medium\",\n  \"dueDate\": \"2025-02-15\"\n}"
                        },
                        "url": "{{baseUrl}}/api/tasks/{{taskId}}"
                    }
                },
                {
                    "name": "Update Task Status",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"status\": \"completed\"\n}"
                        },
                        "url": "{{baseUrl}}/api/tasks/{{taskId}}/status"
                    }
                },
                {
                    "name": "Update Task Priority",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"priority\": \"high\"\n}"
                        },
                        "url": "{{baseUrl}}/api/tasks/{{taskId}}/priority"
                    }
                },
                {
                    "name": "Assign User to Task",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"userId\": \"USER_ID_HERE\"\n}"
                        },
                        "url": "{{baseUrl}}/api/tasks/{{taskId}}/assign"
                    }
                },
                {
                    "name": "Remove User from Task",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"userId\": \"USER_ID_HERE\"\n}"
                        },
                        "url": "{{baseUrl}}/api/tasks/{{taskId}}/unassign"
                    }
                },
                {
                    "name": "Delete Task",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/api/tasks/{{taskId}}"
                    }
                }
            ]
        }
    ]
}