                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"fullName\": \"John Doe\",\n  \"email\": \"john.doe@taskflow.com\",\n  \"mobileNo\": \"9123456789\",\n  \"password\": \"User@123\",\n  \"role\": \"user\"\n}"
