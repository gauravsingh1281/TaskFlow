                {
                    "name": "Delete Task",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/api/tasks/{{taskId}}"
                    }
                }
            ]
        }
    ]
}