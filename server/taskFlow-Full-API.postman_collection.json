{
    "info": {
        "name": "Task Flow Full API",
        "description": "Complete Postman collection for Auth, Users, and Task APIs (JWT via Cookies or Headers)",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000"
        },
        {
            "key": "token",
            "value": ""
        },
        {
            "key": "taskId",
            "value": ""
        },
        {
            "key": "userId",
            "value": ""
        }
    ],
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register Admin",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"fullName\": \"Admin User\",\n  \"email\": \"admin@taskflow.com\",\n  \"mobileNo\": \"9876543210\",\n  \"password\": \"Admin@123\",\n  \"role\": \"admin\"\n}"
                        },
                        "url": "{{baseUrl}}/api/auth/register"
                    }
                },
                {
                    "name": "Register Regular User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
