                {
                    "name": "Logout",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/api/auth/logout"
                    }
                }
            ]
        },
        {
            "name": "Users (Admin)",
            "item": [
                {
                    "name": "Get All Users",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/api/users"
                    }
                }
            ]
        },
        {
            "name": "Tasks",
            "item": [
                {
                    "name": "Create Task (High Priority)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Complete Project Documentation\",\n  \"description\": \"Write comprehensive documentation for TaskFlow API including setup guide, endpoints, and examples\",\n  \"priority\": \"high\",\n  \"dueDate\": \"2025-12-31\",\n  \"assignedTo\": \"{{userId}}\"\n}"
                        },
                        "url": "{{baseUrl}}/api/tasks"
                    }
                },
                {
                    "name": "Create Task (Medium Priority)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Code Review for Authentication Module\",\n  \"description\": \"Review and test JWT authentication, middleware, and role-based access control\",\n  \"priority\": \"medium\",\n  \"dueDate\": \"2025-12-25\"\n}"
                        },
                        "url": "{{baseUrl}}/api/tasks"
                    }
                },
                {
                    "name": "Create Task (Low Priority)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Refactor Utility Functions\",\n  \"description\": \"Clean up and optimize utility functions in the utils directory\",\n  \"priority\": \"low\",\n  \"dueDate\": \"2026-01-15\"\n}"
                        },
                        "url": "{{baseUrl}}/api/tasks"
                    }
                },
                {
                    "name": "Get My Tasks",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/tasks?page=1&limit=5",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "tasks"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1",
                                    "description": "Page number (default: 1)"
                                },
                                {
                                    "key": "limit",
                                    "value": "5",
                                    "description": "Number of tasks per page (default: 5)"
                                },
                                {
                                    "key": "priority",
                                    "value": "high",
                                    "description": "Filter by priority: low, medium, high",
                                    "disabled": true
                                },
                                {
                                    "key": "status",
                                    "value": "pending",
                                    "description": "Filter by status: pending, completed",
                                    "disabled": true
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get My Tasks (High Priority)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/tasks?priority=high",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "tasks"
                            ],
                            "query": [
                                {
                                    "key": "priority",
                                    "value": "high"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get My Tasks (Pending)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/tasks?status=pending",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "tasks"
                            ],
                            "query": [
                                {
                                    "key": "status",
                                    "value": "pending"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get My Tasks (Completed)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/tasks?status=completed",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "tasks"
                            ],
                            "query": [
                                {
                                    "key": "status",
                                    "value": "completed"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Task By ID",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{baseUrl}}/api/tasks/{{taskId}}"
                    }
                },
                {
                    "name": "Update Task",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Updated Task Title\",\n  \"description\": \"Updated description\",\n  \"priority\": \"medium\",\n  \"dueDate\": \"2025-02-15\"\n}"
                        },
                        "url": "{{baseUrl}}/api/tasks/{{taskId}}"
                    }
                },
                {
                    "name": "Update Task Status",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"status\": \"completed\"\n}"
                        },
                        "url": "{{baseUrl}}/api/tasks/{{taskId}}/status"
                    }
                },
                {
                    "name": "Update Task Priority",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"priority\": \"high\"\n}"
