                            "raw": "{\n  \"fullName\": \"Jane Smith\",\n  \"email\": \"jane.smith@taskflow.com\",\n  \"mobileNo\": \"9234567890\",\n  \"password\": \"User@123\",\n  \"role\": \"user\"\n}"
                        },
                        "url": "{{baseUrl}}/api/auth/register"
                    }
                },
                {
                    "name": "Login as Admin",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"admin@taskflow.com\",\n  \"password\": \"Admin@123\"\n}"
